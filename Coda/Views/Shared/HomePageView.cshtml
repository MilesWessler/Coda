<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Coda - Learn, Jam, Connect</title>
    @Styles.Render("~/startbootstrap/css/bootstrap.min.css")
    @Styles.Render("~/startbootstrap/css/grayscale.css")
    @Styles.Render("~/startbootstrap/font-awesome/css/font-awesome.min.css")
    <link href="http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand page-scroll">
                </a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
                <ul class="nav navbar-nav">
                   
                    <li>@Html.ActionLink("Artists", "Index", "Artists")</li>
                    <li>@Html.ActionLink("Songs", "Index", "Songs")</li>
                    <li>@Html.ActionLink("Top 10", "Top10", "Tablatures")</li>
                    <li>@Html.ActionLink("Profile", "Create", "MemberProfiles")</li>
                    <li>@Html.ActionLink("Connect", "Index", "MemberProfiles")</li> 
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Flagged Tabs", "FlaggedTabs", "Tablatures")</li>
                        <li>@Html.ActionLink("Top Rated Tabs", "TopRatedTabs", "Tablatures")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <footer>
        <div class="container text-center">
            <p>&copy; Coda</p>
        </div>
    </footer>
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/Scripts/jquery-2.2.3.js")
   @Scripts.Render("~/startbootstrap/js/jquery.js")
   @Scripts.Render("~/startbootstrap/js/bootstrap.min.js")
   @Scripts.Render("~/startbootstrap/js/jquery.easing.min.js")
    @Scripts.Render("~/startbootstrap/js/grayscale.js")




@*<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCbwckc9GiNYqtTpQQv4OaFfcAvQwHozHM&sensor=false"></script>*@


</body>
</html>