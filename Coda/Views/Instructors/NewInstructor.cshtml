@model Coda.Models.Instructor

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h3>Are You Interested in Becoming an Instructor?</h3>
    <h5>Just Fill Out the Form Below...</h5>
    <hr />
    <div class="form-horizontal instructor-container">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.PricePerHour, new { htmlAttributes = new { @class = "form-control", @placeholder = "Hourly Rate" } })
                @Html.ValidationMessageFor(model => model.PricePerHour, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content, new
           {
               @class = "instructor-aboutme",
               placeholder = "Tell us about your experience as an instructor..."
           })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "InstructorsNearYou")
</div>
