<h2 style="color: #42dca3">Top 10</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Song.Name)
        </th>
        <th>
            Page Views
        </th>
        <th>
            Link to Tab
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Song.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PageViews)
            </td>
            <td>
                @Html.ActionLink("Tab", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
